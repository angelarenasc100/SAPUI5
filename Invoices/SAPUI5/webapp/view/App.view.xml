<mvc:View controllerName="alfa04.SAPUI5.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <Shell >
        <App>
            <pages> 
                <Page title="{i18n>appTitle}" >
                    <headerContent>
                        <Button icon="sap-icon://action"
                                press=".onOpenDialogHeader"
                                class="sapUiSmallMarginEnd"
                                id="helloDialogHeader"/>
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="alfa04.SAPUI5.view.HelloPanel"/>
                        <mvc:XMLView viewName="alfa04.SAPUI5.view.InvoicesList"/>
                    </content>
                </Page>
            </pages>
        </App>    
    </Shell>
</mvc:View>